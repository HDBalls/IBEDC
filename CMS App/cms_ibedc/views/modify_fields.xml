   <record id="res_partner_tree_meter_no" model="ir.ui.view">

            <field name="name">res.partner.treeview.meter_no</field>

            <field name="model">res.partner</field>

            <field name="inherit_id" ref="base.view_partner_tree" /> 

            <field name="arch" type="xml">  

               

               <xpath
                     expr="//field[@name='country_id']" position="after">
                     <field name="property_type" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='property_type']" position="after">
                     <field name="lname" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='lname']" position="after">
                     <field name="lphone" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='lphone']" position="after">
                     <field name="tname" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='tname']" position="after">
                     <field name="meter_type" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='meter_type']" position="after">
                     <field name="meter_oem" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='meter_oem']" position="after">
                     <field name="meter_model" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='meter_model']" position="after">
                     <field name="meter_number" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='meter_number']" position="after">
                     <field name="tarrif_category" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='tarrif_category']" position="after">
                     <field name="tarrif_class" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='tarrif_class']" position="after">
                     <field name="tarrif_rate" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='tarrif_rate']" position="after">
                     <field name="CIN" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='CIN']" position="after">
                     <field name="bal_energy" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='bal_energy']" position="after">
                     <field name="bal_cash" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='bal_cash']" position="after">
                     <field name="is_metered" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='is_metered']" position="after">
                     <field name="is_prepaid" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='is_prepaid']" position="after">
                     <field name="discoName" optional="hide"/>
               </xpath>

               <xpath
                     expr="//field[@name='discoName']" position="after">
                     <field name="mobile" optional="hide"/>
               </xpath>
       
            </field>


   </record>
   
   <record model="ir.ui.menu" id="menu_contacts">
       <field name="name">Customers</field>
       
   </record>
   
   <record model="ir.ui.menu" id="res_partner_menu_contacts">
       <field name="name">Customers</field>
   </record>

   <record id="action_contacts" model="ir.actions.act_window">
        <field name="name">Customers</field>
   </record>

    <record id="res_partner_meter_no" model="ir.ui.view">

            <field name="name">res.partner.view.meter_no</field>

            <field name="model">res.partner</field>

            <field name="inherit_id" ref="base.view_partner_form" /> 
               
            <field name="arch" type="xml">       
                <xpath expr="//field[@name='website']" position="after">

                   <field name="account_no"/>

                </xpath>

                <xpath expr="//field[@name='account_no']" position="after">

                   <field name="meter_number"/>

                </xpath>

                <xpath expr="//field[@name='meter_number']" position="after">

                   <field name="last_vending"/>

                </xpath>

                <xpath expr="//field[@name='last_vending']" position="after">

                   <field name="last_vend_amount"/>

                </xpath>

                <xpath expr="//field[@name='last_vend_amount']" position="after">

                   <field name="account_type"/>

                </xpath>

                <!-- <xpath expr="//field[@widget='phone']/.." position="after">

                     <field name="discoName"/>
  
                </xpath> -->

                <xpath expr="//field[@name='phone']" position="after">
                   
                   <field name="accountID"/>
                                       
                </xpath> 

                <xpath expr="//field[@name='phone']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                

                <!-- Hide Tax ID  -->
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <!-- Website link  -->
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <!-- Hide Tags  -->
                <xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
                <!-- Hide contact & addresses -->
                <xpath expr="//notebook/page[1]" position="attributes">
                    <attribute name="invisible">True</attribute>
			    </xpath>
                <!-- Hide sales and purchase -->

                <xpath expr="//notebook/page[2]" position="attributes">
                    <attribute name="invisible">True</attribute>
		    </xpath>

                <!-- Invoicing -->
                <xpath expr="//notebook/page[3]" position="attributes">
                    <attribute name="invisible">False</attribute>
		    </xpath>

                
                <xpath expr="//field[@name='accountID']" position="after">
                <form  id="test_form">
                    <sheet>
                        <group>
                               <button type = "object" name= "importdata" string = "Import billing history" class = "oe_highlight"/>
                        </group>
                        <group>
                               <button type = "object" name= "importpaymenthistory" string = "Import payment history" class = "oe_highlight"/>
                        </group>
                    </sheet>
                </form>
		    </xpath>

                
            
            </field>

        </record>
        
</odoo>