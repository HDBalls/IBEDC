    <menuitem name="Contacts"
        id="menu_contacts"
        sequence="4"
        web_icon="contacts,static/description/icon.png"
        groups="base.group_user,base.group_partner_manager"/>

    <menuitem id="res_partner_menu_contacts"
        name="Contacts"
        action="action_contacts"
