<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="payment_history_tree" model="ir.ui.view">
        <field name="name">payment.history.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type = "xml">
                <xpath expr="//notebook/page[@name='internal_notes']" position="before">
                <page string="Payment History">
                    <field name="payment_history">
                        <tree editable="bottom">
                            <field name = "initiation_date"/>
                            <field name = "timestamp"/>
                            <field name = "confirmation_date"/>
                            <field name = "units_consumed"/>
                            <field name = "transaction_id"/>
                            <field name = "transaction_refr"/>
                            <field name = "tx_message"/>
                            <field name = "gross_amount"/>
                            <field name = "net_amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
